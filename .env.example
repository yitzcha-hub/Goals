# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
# Required for Stripe webhook: bypasses RLS so server can upsert subscriptions (Supabase Dashboard → Settings → API → service_role)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
VITE_STRIPE_SECRET_KEY=sk_test_xxx
VITE_STRIPE_WEBHOOK_SECRET=whsec_xxx
VITE_STRIPE_PRICE_ID_MONTHLY=price_xxx
VITE_STRIPE_PRICE_ID_ANNUAL=price_xxx

# AI Configuration (at least one key required for AI features)
# OpenAI (paid) — get key at platform.openai.com
# For site AI chatbot and server-side AI: set OPENAI_API_KEY (used by /api/chat-completion, no CORS).
OPENAI_API_KEY=sk-xxx
# Optional: client-side fallback for other AI features (exposed in build; prefer OPENAI_API_KEY on server).
VITE_OPENAI_API_KEY=sk-xxx
# Google Gemini (free tier: 15 RPM) — get free key at aistudio.google.com/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key

# Firebase Configuration (for push notifications)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-xxx
# Required for FCM: Firebase Console → Project Settings → Cloud Messaging → Web Push certificates
VITE_FIREBASE_VAPID_KEY=your_vapid_key

# Server-side: For cron-reminders API (Vercel env). Firebase Console → Project Settings → Service accounts → Generate new private key. Paste full JSON string.
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Microsoft Graph (for calendar sync)
VITE_MICROSOFT_GRAPH_CLIENT_ID=your_microsoft_client_id

# Custom Domain (optional - auto-detected from window.location)
# VITE_APP_URL=https://yourdomain.com
VITE_APP_URL=http://localhost:3000
